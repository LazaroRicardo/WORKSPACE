	<!--  código añadido  por el tablib jstl, ya que sino no podría utilizarlo:-->
		<c:forEach var="unUsuario" items="${losUsuarios}">  
  			<li>
  				<div>(${unUsuario.id})</div>
  				<div>{${unUsuario.name}}</div>
  			</li>
		</c:forEach>
		
